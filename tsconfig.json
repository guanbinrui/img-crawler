{
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "./dist/"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_mdoules"]
}
